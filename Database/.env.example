# PostgreSQL Database Configuration
POSTGRES_DB=sorami
POSTGRES_USER=user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection (for applications)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sorami
DB_USER=sorami_user
DB_PASSWORD=your_secure_password_here

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@sorami.local
PGADMIN_DEFAULT_PASSWORD=admin_password_here

# Docker Registry (for GHCR publishing)
REGISTRY=ghcr.io
REGISTRY_USERNAME=your_github_username
IMAGE_NAME=sorami-postgres
IMAGE_TAG=latest